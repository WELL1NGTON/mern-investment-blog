  "scripts": {
    "build": "yarn babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored && yarn --cwd client run build",
    "install-client": "cd client && yarn install",
    "heroku-postbuild": "yarn run install-client && yarn run build",
    "client": "cd client && yarn start",
    "dev:client": "yarn --cwd client start",
    "dev:server": "ts-node-dev -r tsconfig-paths/register src/shared/infra/http/server.ts --traceResolution",
    "dev": "concurrently -n 'server,client' -c 'red,green' \"yarn run dev:server\" \"yarn run dev:client\"",
    "start": "node dist/shared/infra/http/server.js"
  },
