## Environment ##
NODE_ENV=#development.env = development

## Server ##
PORT=5000
HOST=localhost


## Setup jet-logger ##
JET_LOGGER_MODE=CONSOLE
JET_LOGGER_FILEPATH=jet-logger.log
JET_LOGGER_TIMESTAMP=TRUE
JET_LOGGER_FORMAT=LINE


## Authentication ##
COOKIE_DOMAIN=localhost
COOKIE_PATH=/
SECURE_COOKIE=false
JWT_SECRET=#SomeSecret = ################################################################################
COOKIE_SECRET=#SomeSecret = ################################################################################
# expires in 3 days
COOKIE_EXP=259200000


## Email Config ##
EMAIL_HOST=#smtp.something.com
EMAIL_PORT=#port
EMAIL_SECURE=#true
EMAIL_AUTH_USER=#some_email@something.com
EMAIL_AUTH_PASSWORD=#password


## Mongo Config ##
MONGO_URI=#Mongo ConnectionString


## JWT ##
ACCESS_TOKEN_SECRET=#SomeSecret = ################################################################################
ACCESS_TOKEN_EXPIRATION_TIME=15m
REFRESH_TOKEN_SECRET=#SomeSecret = ################################################################################
REFRESH_TOKEN_EXPIRATION_TIME=7d
EMAIL_TOKEN_SECRET=#SomeSecret = ################################################################################
EMAIL_TOKEN_EXPIRATION_TIME=15m


## Firebase Storage ##
GOOGLE_APPLICATION_CREDENTIALS=#./env/someCredentialsJson.json
GOOGLE_BUCKET_NAME=#bucketName.appspot.com
